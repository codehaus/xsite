<?xml version="1.0" encoding="ISO-8859-1"?>
<project xmlns:j="jelly:core">

	<pomVersion>3</pomVersion>
	<currentVersion>1.0-SNAPSHOT</currentVersion>
	<name>xsite</name>
	<groupId>org.codehaus.xsite</groupId>
	<id>xsite</id>
	<url>http://xsite.codehaus.org</url>
	<organization></organization>
	<inceptionYear>2005</inceptionYear>
	<description>XSite - a simple site generation tool</description>
	<shortDescription>
		XSite - a simple site generation tool
	</shortDescription>
	<logo></logo>

	<siteAddress></siteAddress>
	<siteDirectory></siteDirectory>

	<distributionSite></distributionSite>
	<distributionDirectory>/dist</distributionDirectory>

	<repository></repository>

	<dependencies>
		<dependency>
			<groupId>freemarker</groupId>
			<artifactId>freemarker</artifactId>
			<version>2.3.3</version>
			<properties>
				<zip.bundle>true</zip.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>opensymphony</groupId>
			<artifactId>sitemesh</artifactId>
			<version>20051115</version>
			<properties>
				<zip.bundle>true</zip.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>xstream</groupId>
			<artifactId>xstream</artifactId>
			<version>1.1.3</version>
			<properties>
				<zip.bundle>true</zip.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>xpp3</groupId>
			<artifactId>xpp3_min</artifactId>
			<version>1.1.3.4.O</version>
			<properties>
				<zip.bundle>true</zip.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>xerces</groupId>
			<artifactId>xerces</artifactId>
			<version>2.4.0</version>
		</dependency>
		<dependency>
			<groupId>picocontainer</groupId>
			<artifactId>picocontainer</artifactId>
			<version>1.2</version>
			<properties>
				<zip.bundle>true</zip.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>nanocontainer</groupId>
			<artifactId>nanocontainer</artifactId>
			<version>1.0</version>
			<properties>
				<zip.bundle>true</zip.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
		</dependency>
	</dependencies>


	<build>
		<defaultGoal>multiproject:install</defaultGoal>
		<sourceDirectory>${basedir}/src/java</sourceDirectory>
		<resources>
			<resource>
				<directory>${basedir}/src/java</directory>
				<includes>
					<include>**/*.xml</include>
				</includes>
			</resource>
		</resources>
		<unitTestSourceDirectory>
			${basedir}/src/test
		</unitTestSourceDirectory>
		<unitTest>
			<includes>
				<include>**/*Test.java</include>
			</includes>
			<excludes>
				<exclude>**/Abstract*</exclude>
			</excludes>
			<resources>
				<resource>
					<directory>${basedir}/src/test</directory>
					<includes>
						<include>**/*</include>
					</includes>
				</resource>
			</resources>
		</unitTest>
	</build>

	<reports></reports>
</project>

